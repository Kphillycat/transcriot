.letter.hidden
  %label Letter to the Comptroller
  %br
  %input{:id=>"gender", :type=>"text", :name=>"people[claimant][gender]", :value=>@claim.claimant_attr("gender")}
  %span.highlighter.gender
    %label{:for=>"gender"} Gender
  %br
  
  %input{:id=>"claim_date", :type=>"date", :name=>"claim[claim_date]", :value=>@claim.claim_date}
  %span.highlighter.claim_date
    %label{:for=>"claim_date"} Claim Date
  %br
  %input{:id=>"incident_date", :type=>"date", :name=>"claim[incident_date]", :value=>@claim.incident_date}
  %span.highlighter.incident_date
    %label{:for=>"incident_date"} Incident Date
  %br
  %input{:id=>"previous_address", :type=>"text", :name=>"people[claimant][previous_address]", :value=>@claim.claimant_attr("previous_address")}
  %span.highlighter.previous_address
    %label{:for=>"previous_address"} Previous Address
  %br
  %input{:id=>"current_address", :type=>"text", :name=>"people[claimant][current_address]", :value=>@claim.claimant_attr("current_address")}
  %span.highlighter.current_address
    %label{:for=>"current_address"} Current Address
  %br

  %br
  %br
  %span.highlighter.letter_text
    %label{:for=>"letter_text"} Letter Text
  %br
  %textarea{:id=>"letter_text", :rows=>"10", :cols=>"29", :name=>"claim[letter]"}
  