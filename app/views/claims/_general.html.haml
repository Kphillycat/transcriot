.general 
  %label Claim Overview
  %br
  %input{:id=>"claimant_name", :type=>"text", :name=>"person[name]", :value=>@claim.claimant_attr("name")}
  %span.highlighter.claimant_name
    %label{:for=>"claimant_name"} Claimant Name
  %br
  %input{:id=>"record_number", :type=>"number", :name=>"claim[record_number]", :value=>@claim.record_number}
  %span.highlighter.record_number
    %label{:for=>"record_number"} Record Number
  %br
  / %input{:id=>"resolution_date", :type=>"date", :name=>"claim[resolution_date]", :value=>@claim.resolution_date}
  / %span.highlighter.resolution_date
  /   %label{:for=>"resolution_date"} Resolution Date
  / %br

  / %input{:id=>"total_awarded", :type=>"number", :name=>"claim[total_awarded]", :step=>"0.01", :value=>@claim.total_awarded}
  / %span.highlighter.total_awarded
  /   %label{:for=>"total_awarded"} Total Awarded
  %input{:id=>"start_page_number", :type=>"number", :value=>@claim.hocr_layers.first.page_number, :name=>"claim[start_page_number]"}
    %span.highlighter.start_page_number
      %label{:for=>"start_page_number"} Start Page Number
  %br
  %input{:id=>"end_page_number", :type=>"number", :value=>@claim.hocr_layers.last.page_number, :name=>"claim[end_page_number]"}
    %span.highlighter.end_page_number
      %label{:for=>"end_page_number"} End Page Number
  %br

  
  %input{:id=>"role", :type=>"hidden", :name=>"person[role]", :value=>"claimant"}
